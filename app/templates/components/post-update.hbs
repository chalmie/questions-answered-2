{{#if updatePostForm}}
    <h1>Update Post</h1>
    <div>
     <form>
       <div class="form-group">
         <label for="author">Author</label>
         {{input value=author id="author"}}
       </div>

       <div class="form-group">
         <label for="question">Question</label>
         {{input value=question id="question"}}
       </div>

       <div class="form-group">
         <label for="detail">Details</label>
         {{input value=detail id="detail"}}
       </div>

       <button {{action 'updatePost' post}}>Update</button>
     </form>
    </div>
 {{else}}
    <button {{action 'updatePostForm'}}>Update Question</button>
{{/if}}
